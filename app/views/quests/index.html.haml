.container
  .center-block
    .col-md-6.mx-auto
      = form_with url: quests_path, method: :get, local: true do |f|
        = f.text_field :search, class: "form-control mr-sm-2 border-secondary mb-1", placeholder: "キーワードを一つ入力してください。"
        = f.submit "検索", class: "btn btn-outline-success my-2 my-sm-0 btn-block col-12"
    - @quests.each do |quest|
      - if public_quest?(quest)
        %div{class: "quest_#{quest.id}"}
          .card.border-secondary.m-2.text-center.text-bg-light.col-md-6.mx-auto
            .crad-body.p-3
              %p.card-title.mb-0
                = quest.title
              %p.card-text.text-secondary.mb-0
                = "難易度:#{quest.difficulty}"
              = link_to "詳細", quest_path(quest), class: "btn btn-outline-success my-1 my-sm-0 col-6"
