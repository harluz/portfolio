= form_with model: @quest do |f|
  .container
    .center-block
      .field
        = f.label :title, class: "form-label"
        = f.text_field :title, autofocus: true, autocomplete: "title", placeholder: "クエストタイトルを入力", class: "form-control"
      - if @quest.errors.include?(:title)
        %p.text-danger= @quest.errors.full_messages_for(:title).first
      .field
        = f.label :describe, class: "form-label"
        = f.text_area :describe, autofocus: true, autocomplete: "describe", placeholder: "クエストの詳細を入力", class: "form-control"
      - if @quest.errors.include?(:describe)
        %p.text-danger= @quest.errors.full_messages_for(:describe).first
      .field
        = f.label :difficulty, class: "form-label"
        - 5.times do |num|
          = f.radio_button :difficulty, num + 1
          #{num + 1}
      - if @quest.errors.include?(:difficulty)
        %p.text-danger= @quest.errors.full_messages_for(:difficulty).first
      .field
        = f.check_box :public
        = f.label "クエストを公開する", class: "form-check-label", for: "flexCheckChecked"
      - if @quest.errors.include?(:public)
        %p.text-danger= @quest.errors.full_messages_for(:public).first
      .actions
        = f.submit "保存", class: "btn btn-primary"
      = link_to "キャンセル", :back
